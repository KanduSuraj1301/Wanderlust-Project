<% layout("/layouts/boilerplate") -%>


    <br>
    <div class="row">
        <h3 class="mb-3">Create a New Listing</h3>
        <br>
        <div class="col-9 offset-2">
            <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-lable">Title</label>
                    <input id="title" type="text" class="form-control" name="listing[title]"
                        placeholder="Add a catchy title" required>
                    <div class="invalid-feedback"> Title is required.</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-lable">Description</label>
                    <textarea id="description " name="listing[description]" class="form-control"
                        placeholder="Enter description" required></textarea>
                    <div class="invalid-feedback">
                        Please enter a short description.
                    </div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-lable">Upload Listing Image</label>
                    <input id="image" type="file" name="listing[image]" class="form-control"
                        placeholder="Enter image ULR/Link" required>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-lable">Price</label>
                        <input id="price" name="listing[price]" class="form-control" placeholder="1800" required>
                        <div class="invalid-feedback">
                            Price should be valid.
                        </div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-lable">Country</label>
                        <input id="country" type="text" name="listing[country]" class="form-control" placeholder="India"
                            required>
                        <div class="invalid-feedback">
                            Country name should be valid. </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-lable">Location</label>
                    <input id="location" type="text" name="listing[location]" class="form-control"
                        placeholder="Ahmedabad, Jaipur" required>
                    <div class="invalid-feedback">
                        Location should be valid.
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-lable">Category</label>
                    <select id="location" type="text" name="listing[category]" required>
                        <option value="" disabled selected>Select here</option>
                        <option value="Iconic City">Iconic City</option>
                        <option value="Mountain">Mountain</option>
                        <option value="Castles">Castles</option>
                        <option value="Pools">Pools</option>
                        <option value="Camping">Camping</option>
                        <option value="Farms">Farms</option>
                        <option value="Artic">Artic</option>
                    </select>
                    <div class="invalid-feedback">
                        Category must be selected.
                    </div>
                </div>
                <button type="submit" class="btn btn-dark add-btn mt-3">Create</button>
                <br><br>
            </form>
        </div>
    </div>

